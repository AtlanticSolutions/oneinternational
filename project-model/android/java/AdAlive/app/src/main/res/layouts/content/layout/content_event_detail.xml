<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.events.EventDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">s

        <LinearLayout
            android:id="@+id/linearlayout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/detailsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivSpeaker"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_photo_plus"
                    app:civ_border_color="@color/black_alpha_20"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/textSpeakerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Event information"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textEventDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event information" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="TITLE EVENT"
                android:textColor="@color/darkBlue"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/PLACEHOLDER_SINOPSE"
                    android:textAllCaps="true"
                    android:textColor="@color/graySignUp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PLACEHOLDER_LOADING"
                    android:textColor="@color/darkBlue" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/graySignUp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/PLACEHOLDER_DATETIME"
                    android:textAllCaps="true"
                    android:textColor="@color/graySignUp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PLACEHOLDER_LOADING"
                    android:textColor="@color/darkBlue" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/graySignUp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/PLACEHOLDER_LOCAL"
                    android:textAllCaps="true"
                    android:textColor="@color/graySignUp" />

                <TextView
                    android:id="@+id/tvPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PLACEHOLDER_LOADING"
                    android:textColor="@color/darkBlue" />


            </LinearLayout>

            <Button
                android:id="@+id/btnSubscribe"
                style="@style/AppTheme.Button.Base"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/button_signup"
                android:text="@string/BUTTON_TITLE_FAVORITE"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnUnsubscribe"
                style="@style/AppTheme.Button.Base"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/button_signup"
                android:text="@string/BUTTON_TITLE_REMOVE_FAVORITE"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnDownload"
                style="@style/AppTheme.Button.Base"
                android:layout_marginBottom="26dp"
                android:background="@drawable/button_download"
                android:text="@string/BUTTON_TITLE_AVAILABLE_FILES"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
