<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/showCaseBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            tools:srcCompat="@drawable/showcase_banner_01"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/showCaseBannerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingStart="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@tools:sample/lorem"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/showCaseBannerTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@tools:sample/lorem"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvShowCase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_showcase"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

    </LinearLayout>
</LinearLayout>
