<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.profile.EditProfileActivity"
    tools:showIn="@layout/activity_edit_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btnPhoto"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:src="@drawable/ic_photo_plus"
            app:civ_border_color="#FFFFFFFF"
            app:civ_border_width="2dp" />


        <TextView
            style="@style/TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PLACEHOLDER_FULLNAME"
            android:textColor="@color/black_alpha_50" />

        <LinearLayout style="@style/AppTheme.LinearLayoutMargin.Field">

            <ImageView
                style="@style/AppTheme.ImageViewField"
                android:src="@drawable/ic_nome" />

            <EditText
                android:id="@+id/etFullName"
                style="@style/AppTheme.EditText.Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/PLACEHOLDER_FULLNAME"
                android:inputType="textPersonName" />
        </LinearLayout>

        <TextView
            style="@style/TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PLACEHOLDER_EMAIL" />

        <LinearLayout style="@style/AppTheme.LinearLayoutMargin.Field">

            <ImageView
                style="@style/AppTheme.ImageViewField"
                android:src="@drawable/ic_mail" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/AppTheme.EditText.Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/PLACEHOLDER_EMAIL"
                android:inputType="textEmailAddress" />
        </LinearLayout>


        <TextView
            style="@style/TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PLACEHOLDER_CITY"
            android:textColor="@color/black_alpha_50" />

        <LinearLayout style="@style/AppTheme.LinearLayoutMargin.Field">

            <ImageView
                style="@style/AppTheme.ImageViewField"
                android:src="@drawable/ic_empresa" />

            <EditText
                android:id="@+id/etCity"
                style="@style/AppTheme.EditText.Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/PLACEHOLDER_CITY"
                android:imeOptions="actionDone"
                android:inputType="textPersonName" />
        </LinearLayout>


        <TextView
            style="@style/TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PLACEHOLDER_REGION"
            android:textColor="@color/black_alpha_50" />

        <RelativeLayout style="@style/AppTheme.LinearLayoutMargin.Field">

            <ImageView
                android:id="@+id/ivAreaIcon"
                style="@style/AppTheme.ImageViewField"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_setor" />

            <ImageView
                android:id="@+id/ivAreaArrow"
                style="@style/AppTheme.ImageViewField"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:src="@drawable/ic_arrow_right" />

            <EditText
                android:id="@+id/etState"
                style="@style/AppTheme.EditText.Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ivAreaArrow"
                android:layout_toRightOf="@+id/ivAreaIcon"
                android:hint="@string/PLACEHOLDER_REGION"
                android:inputType="none" />
        </RelativeLayout>

        <TextView
            style="@style/TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PLACEHOLDER_ROLE"
            android:textColor="@color/black_alpha_50" />

        <RelativeLayout style="@style/AppTheme.LinearLayoutMargin.Field">

            <ImageView
                android:id="@+id/ivInterestIcon"
                style="@style/AppTheme.ImageViewField"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_interesse" />


            <ImageView
                android:id="@+id/ivInterestArrow"
                style="@style/AppTheme.ImageViewField"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:src="@drawable/ic_arrow_right" />

            <EditText
                android:id="@+id/etRole"
                style="@style/AppTheme.EditText.Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivInterestArrow"
                android:layout_toRightOf="@+id/ivInterestIcon"
                android:hint="@string/PLACEHOLDER_ROLE"
                android:inputType="phone" />
        </RelativeLayout>


        <Button
            android:id="@+id/btnChangePassword"
            style="@style/AppTheme.Button.Base"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_access"
            android:text="@string/BUTTON_TITLE_CHANGE_PASSWORD"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnSaveProfile"
            style="@style/AppTheme.Button.Base"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_signup"
            android:text="@string/BUTTON_TITLE_EDIT_PROFILE"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
