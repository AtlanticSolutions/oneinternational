<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_10"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.timeline.CreatePostActivity"
    tools:showIn="@layout/activity_create_post">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/container_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivSelectedPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:scaleType="centerInside"
                    android:src="@color/black_alpha_20" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/container_add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_image"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_generic"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_post_photo" />

                <View
                    android:id="@+id/viewButton"
                    android:layout_width="5dp"
                    android:layout_height="48dp" />

                <ImageButton
                    android:id="@+id/btnCancelPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_generic"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_trash" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/container_post"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/container_add_photo"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white">

                <EditText
                    android:id="@+id/etMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="255"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="@string/HINT_TIMELINE_NEW_POST"
                    android:maxLines="5"
                    android:textSize="16sp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
