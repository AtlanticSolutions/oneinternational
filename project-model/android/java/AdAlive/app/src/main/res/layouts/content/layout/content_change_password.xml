<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.profile.ChangePasswordActivity"
    tools:showIn="@layout/activity_change_password">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/AppTheme.LinearLayoutMargin.Field"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp">

            <ImageView
                style="@style/AppTheme.ImageViewField"
                android:visibility="gone"
                android:src="@drawable/ic_pwd" />

            <EditText
                android:id="@+id/etPassword"
                style="@style/AppTheme.EditText.Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:hint="@string/PLACEHOLDER_NEW_PASSWORD"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.LinearLayoutMargin.Field"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp">

            <ImageView
                style="@style/AppTheme.ImageViewField"
                android:visibility="gone"
                android:src="@drawable/ic_pwd" />

            <EditText
                android:id="@+id/etConfirmPassword"
                style="@style/AppTheme.EditText.Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:hint="@string/PLACEHOLDER_CONFIRM_PASSWORD"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSavePassword"
            style="@style/AppTheme.Button.Base"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:text="@string/BUTTON_TITLE_SAVE_PASSWORD"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>
